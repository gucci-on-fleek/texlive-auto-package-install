%%%%%%%%%%%%%%%%%%%%%%
%%% Initialization %%%
%%%%%%%%%%%%%%%%%%%%%%

%% We need expl3 built in to the format
\NeedsTeXFormat{LaTeX2e}[2020/02/02]

%% Switch to expl3 syntax
\ProvidesExplPackage
    {network-install}
    {2026/01/21} %%slashdate
    {v0.1.2} %%version
    {Automatically installs missing LaTeX packages from TeX Live}


%%%%%%%%%%%%%%%%
%%% Variants %%%
%%%%%%%%%%%%%%%%

\cs_generate_variant:Nn \msg_new:nnnn { Vnnn }
\cs_generate_variant:Nn \msg_critical:nn { Vn }
\cs_generate_variant:Nn \hook_gput_code:nnn { nVn }
\cs_generate_variant:Nn \lua_load_module:n { V }

%%%%%%%%%%%%%%%%%
%%% Constants %%%
%%%%%%%%%%%%%%%%%

\str_const:Nn \c__netinst_name_str { network-install }

\msg_new:Vnnn \c__netinst_name_str { luatex-only } {
    The~ ``network-install~package''~ requires~ LuaTeX.
} {
    Please~ use~ LuaLaTeX~ to~ compile~ documents~ using~ this~ package.
}

%%%%%%%%%%%%%%%%%%%%%%
%%% Implementation %%%
%%%%%%%%%%%%%%%%%%%%%%

%% Load the Lua module
\sys_if_engine_luatex:TF {
    \lua_load_module:V \c__netinst_name_str
} {
    \msg_critical:Vn \c__netinst_name_str { luatex-only }
}

%% Always load "latexrelease" to make sure that the installed packages are
%% never newer than the format itself.
\RequirePackage { latexrelease }
